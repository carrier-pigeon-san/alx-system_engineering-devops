#!/usr/bin/env bash
# Configure ndinx to run as nginx user

sudo sed -i 's/80 default_server;/8080 default_server;/g' /etc/nginx/sites_available/default

sudo sed -i 's/user www-data/# user www-data/g' /etc/nginx/nginx.conf

sudo sed -i 's/KillMode=mixed/KillMode=mixed\nUser=nginx\nGroup=nginx\nRestart=on-failure\nRestartSec=10s/g' /lib/systemd/system/nginx.service

sudo systemctl daemon-reload

sudo su nginx -c "chmod 766 /var/log/nginx/error.log"
sudo su nginx -c "chmod 757 /run"

sudo systemctl restart nginx
