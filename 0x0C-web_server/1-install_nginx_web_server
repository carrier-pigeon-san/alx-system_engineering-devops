#!/usr/bin/env bash
# This bash script installs and configures a nginx server
# The server listens on port 80
# The server returns a page containing the string 'Hello World' when...
# queried at the root

server_block="server {
	listen 80;

	server_name abnb_alx.com;

	root /var/www/abnb_alx.com/html;
	index index.html;
}"

apt-get update
apt-get install nginx -y

rm -f /var/www/html/*

echo "Hello World!" | tee /var/www/html/index.html >/dev/null

nginx -s reload
